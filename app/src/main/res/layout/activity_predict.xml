<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MatchColorActivity"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="450dp"
        android:layout_height="354dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="352dp"
        android:backgroundTint="@color/ghost_white"
        >
        <RelativeLayout
            android:id="@+id/imageTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/button1"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/button1"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"

                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/button2"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/button2"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button1"
                android:layout_alignLeft="@+id/button1"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button2"
                android:layout_toRightOf="@id/button4"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button3"
                android:layout_alignLeft="@id/button3"
                android:layout_toRightOf="@id/button5"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button4"
                android:layout_alignLeft="@id/button1"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"

                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/button7"
                android:layout_toRightOf="@id/button7"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button9"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button6"
                android:layout_alignTop="@id/button8"
                android:layout_toRightOf="@id/button8"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/userGuideTab"
        android:layout_width="300dp"
        android:layout_height="208dp"
        app:layout_constraintLeft_toRightOf="@+id/imageCard"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="@color/ghost_white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請在左選擇在上一段配完成顏色的物件"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/actionTab"
        android:layout_width="301dp"
        android:layout_height="191dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@+id/imageCard"
        app:layout_constraintTop_toBottomOf="@+id/userGuideTab"
        android:layout_marginLeft="250dp"
        >

        <Button
            android:id="@+id/nextButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="85dp"
            android:background="@color/white"
            android:text="Next"
            android:textColor="@color/red">

        </Button>

        <Button
            android:id="@+id/replayButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/nextButton"
            android:layout_marginTop="10dp"
            android:text="Replay"
            android:textColor="@color/white"
            android:background="@color/royal_blue"
            />

        <Button
            android:id="@+id/escButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginRight="37dp"
            android:layout_below="@id/nextButton"
            android:layout_marginTop="10dp"
            android:text="ESC"
            app:layout_constraintRight_toLeftOf="@id/replayButton"
            app:layout_constraintTop_toBottomOf="@id/nextButton"
            android:textColor="@color/white"
            android:background="@color/royal_blue"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>