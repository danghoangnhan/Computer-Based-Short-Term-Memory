<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AuthenticationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/user_recycleview"
        app:layout_constraintTop_toTopOf="parent"
        >
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:id="@+id/headerScroll"
            android:layout_height="@dimen/header_height"
            >

            <LinearLayout android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="@dimen/cell_width_2"
                    android:id="@+id/txtName"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin"
                    android:text="@string/user_name"
                    android:textAllCaps="true"
                    android:gravity="center|start"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="@dimen/cell_width_2"
                    android:id="@+id/game_score"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin"
                    android:text="@string/game_score"
                    android:textAllCaps="true"
                    android:gravity="center|start"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="@dimen/cell_width_2"
                    android:id="@+id/gamestart_time"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin"
                    android:gravity="center|start"
                    android:text="@string/game_start_time"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="@dimen/cell_width_2"
                    android:id="@+id/gameend_time"
                    android:gravity="center|start"
                    android:layout_marginStart="@dimen/margin"
                    android:textStyle="bold"
                    android:text="@string/gameend_time"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="@dimen/cell_width_2"
                    android:id="@+id/ad8_score"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin"
                    android:gravity="center|start"
                    android:text="@string/ad8_score"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="@dimen/cell_width_2"
                    android:id="@+id/ad8_starttime"
                    android:gravity="center|start"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin"
                    android:text="@string/ad8_starttime"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="@dimen/cell_width_2"
                    android:id="@+id/ad8_endtime"
                    android:gravity="center|start"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin"
                    android:text="@string/ad8_endtime"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </HorizontalScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/session_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="500dp"

            />
        <include
            layout="@layout/action_button_group_4"
            android:id="@+id/imageCard"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>