<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.WaitingActivity">
    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:id="@+id/textTab"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="TextView" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actionTab"
        android:layout_width="269dp"
        android:layout_height="208dp"
        android:layout_marginStart="460dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textTab"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="203dp"
        >
        <Button
            android:id="@+id/nextButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="48dp"
            android:text="Next">

        </Button>

        <Button
            android:id="@+id/replayButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="Replace" />

        <Button
            android:id="@+id/escButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="144dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="37dp"
            android:text="ESC"
            app:layout_constraintRight_toLeftOf="@id/replayButton"
            app:layout_constraintTop_toBottomOf="@id/nextButton" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>