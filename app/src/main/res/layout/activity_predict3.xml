<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royal_blue"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/cornflower_blue"
        >
        <include
            layout="@layout/board_button"
            android:id="@+id/imageCard"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="650dp"
            android:layout_height="410dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/color_card"
            android:layout_width="70dp"
            android:layout_height="650dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/cornflower_blue"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="750dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/color_recycle"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:background="@color/white"
                android:backgroundTint="@color/ghost_white"

                />
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="269dp"
            android:layout_height="208dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="845dp"
            android:backgroundTint="@color/ghost_white"
            >
            <TextView
                android:id="@+id/userGuideText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="40dp"
                android:textSize="30dp"
                android:text="請把顏色"
                />
            <TextView
                android:id="@+id/userGuideText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:textSize="30dp"
                android:text="放到有物件的圓圈"
                />

        </androidx.cardview.widget.CardView>
        <include
            layout="@layout/action_button_group"
            android:layout_marginLeft="845dp"
            android:layout_marginTop="380dp"
            android:layout_width="269dp"
            android:layout_height="208dp"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>