<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="464dp"
        android:layout_height="57dp"
        android:layout_marginBottom="352dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageTab"
        app:layout_constraintHorizontal_bias="0.037"
        tools:ignore="MissingConstraints"
        />

    <RelativeLayout
        android:id="@+id/imageTab"
        android:layout_width="462dp"
        android:layout_height="354dp"
        app:layout_constraintTop_toBottomOf="@+id/recycleview"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp"
            android:padding="10dp"
            android:layout_alignTop="@id/button1"
            android:layout_toRightOf="@id/button1"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignTop="@id/button2"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/button2"
            android:padding="10dp"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button1"
            android:layout_alignLeft="@+id/button1"
            android:padding="10dp"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button2"
            android:layout_toRightOf="@id/button4"
            android:padding="10dp"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button3"
            android:layout_alignLeft="@id/button3"
            android:layout_toRightOf="@id/button5"
            android:padding="10dp"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button4"
            android:layout_alignLeft="@id/button1"
            android:padding="10dp"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignTop="@id/button7"
            android:layout_toRightOf="@id/button7"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp"
            android:padding="10dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/button9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignTop="@id/button8"
            android:layout_toRightOf="@id/button8"
            android:layout_below="@id/button6"
            android:src="@color/orange"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/black"
            app:strokeWidth="10dp"
            android:padding="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="269dp"
        android:layout_height="208dp"
        android:layout_marginStart="464dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/userGuideTab"
        app:layout_constraintLeft_toRightOf="@+id/imageTab"
        app:layout_constraintBottom_toTopOf="@+id/actionTab"
        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="269dp"
        android:layout_height="208dp"
        android:layout_marginStart="464dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/actionTab"
        app:layout_constraintLeft_toRightOf="@+id/imageTab"
        app:layout_constraintTop_toBottomOf="@+id/userGuideTab"
        >

        <Button
            android:id="@+id/nextButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="48dp"
            android:text="Next" />

        <Button
            android:id="@+id/replayButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:text="Replace" />

        <Button
            android:id="@+id/escButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="144dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="37dp"
            android:text="ESC"
            app:layout_constraintRight_toLeftOf="@id/replayButton"
            app:layout_constraintTop_toBottomOf="@id/nextButton" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>