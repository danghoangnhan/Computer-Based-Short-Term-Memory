<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AD8WelComeActivity">

    <TextView
        android:id="@+id/ad8_welcome_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歡迎進行AD8量表檢測"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="250dp"
        android:textColor="@color/black"

        />



    <TextView
        android:id="@+id/ad8_welcome_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad8_welcome_1"
        android:text="請依據您近1年是否經常有以下情況發生來考量「是」或「不是」。"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        >
    </TextView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/ad8_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="進行檢測"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ad8_welcome_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="500dp"
        android:textSize="40dp"
        style="@style/login_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>