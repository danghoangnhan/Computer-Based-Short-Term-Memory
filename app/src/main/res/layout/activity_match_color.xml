<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MatchColorActivity"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/recyCard"
        app:layout_constraintBottom_toTopOf="@+id/imageCard"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:orientation="vertical"
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            app:layout_constraintHorizontal_bias="0.037"
            android:nestedScrollingEnabled="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:backgroundTint="@color/ghost_white"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        app:layout_constraintTop_toBottomOf="@+id/recyCard"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="450dp"
        android:layout_height="400dp"
        android:layout_marginBottom="352dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        tools:ignore="NotSibling"
        android:backgroundTint="@color/ghost_white"

        >
        <RelativeLayout
            android:id="@+id/imageTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/recyCard"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/ghost_white"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/button1"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/button1"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"

                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/button2"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/button2"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button1"
                android:layout_alignLeft="@+id/button1"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"

                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button2"
                android:layout_toRightOf="@id/button4"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button3"
                android:layout_alignLeft="@id/button3"
                android:layout_toRightOf="@id/button5"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"

                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button4"
                android:layout_alignLeft="@id/button1"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"

                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/button7"
                android:layout_toRightOf="@id/button7"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/button9"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/button6"
                android:layout_alignTop="@id/button8"
                android:layout_toRightOf="@id/button8"
                android:padding="10dp"
                android:src="@color/white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="@color/white"
                app:strokeWidth="20dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/userRightTab"
        android:layout_width="450dp"
        android:layout_height="500dp"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintLeft_toRightOf="@+id/imageCard"
        app:layout_constraintTop_toTopOf="@+id/recyCard"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/userGuildeTab"
            android:layout_width="269dp"
            android:layout_height="208dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/button_recycleTab"
            android:backgroundTint="@color/ghost_white"
            >
            <TextView
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:text="請先選擇物件，再搭配顏色"
                android:textSize="25dp" />
        </androidx.cardview.widget.CardView>
        <include
            layout="@layout/action_button_group"
            />
<!--        <include-->
<!--            layout="@layout/content_main"-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="120dp"-->
<!--            android:id="@+id/test"-->
<!--            />-->
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>