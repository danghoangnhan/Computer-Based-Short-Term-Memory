<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MatchColorActivity"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="464dp"
        android:layout_height="57dp"
        android:layout_marginBottom="352dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageTab"
        app:layout_constraintHorizontal_bias="0.037"
        tools:ignore="MissingConstraints"
        />
    <RelativeLayout
        android:id="@+id/imageTab"
        android:layout_width="462dp"
        android:layout_height="354dp"
        app:layout_constraintTop_toBottomOf="@+id/recycleview"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />
        <ImageButton
            android:id="@+id/button2"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_alignTop="@id/button1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button1"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_alignTop="@id/button2"
            android:layout_toRightOf="@id/button2"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_marginTop="105dp"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_alignBottom="@id/button4"
            android:layout_toRightOf="@id/button4"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />
        <ImageButton
            android:id="@+id/button6"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_alignBottom="@id/button5"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/button5"
            tools:layout_editor_absoluteX="10dp"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_alignBottom="@id/button7"
            android:layout_toRightOf="@id/button7"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />

        <ImageButton
            android:id="@+id/button9"
            android:layout_width="116dp"
            android:layout_height="106dp"
            android:layout_alignBottom="@id/button8"
            android:layout_toRightOf="@id/button8"
            android:background="@drawable/select_border"
            android:foreground="@drawable/code"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="269dp"
        android:layout_height="208dp"
        android:layout_marginStart="464dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/userGuideTab"
        app:layout_constraintLeft_toRightOf="@+id/imageTab"
        app:layout_constraintBottom_toTopOf="@+id/actionTab"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/button_recycleview"
            android:layout_marginBottom="352dp"
            android:scrollbars="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="269dp"
        android:layout_height="208dp"
        android:layout_marginStart="464dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/actionTab"
        app:layout_constraintLeft_toRightOf="@+id/imageTab"
        app:layout_constraintTop_toBottomOf="@+id/userGuideTab"
        >

        <Button
            android:id="@+id/nextButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="48dp"
            android:text="Next">

        </Button>
        <Button
            android:id="@+id/replayButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:text="Replace" />

        <Button
            android:id="@+id/escButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="144dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="37dp"
            android:text="ESC"
            app:layout_constraintRight_toLeftOf="@id/replayButton"
            app:layout_constraintTop_toBottomOf="@id/nextButton" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>