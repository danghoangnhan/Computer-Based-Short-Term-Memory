<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button_actionlist"
    android:layout_width="269dp"
    android:layout_height="208dp"
    >

    <Button
        android:id="@+id/ad8_button"
        style="@style/login_button"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="AD8檢測"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/replayButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/escButton"
        android:background="@drawable/custome_button1"
        android:drawableEnd="@drawable/replay"
        android:paddingRight="5dp"
        android:text="重新來過"
        style="@style/action_button2"

        />

    <Button
        android:id="@+id/escButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/custome_button1"
        android:drawableRight="@drawable/exit"
        android:drawablePadding="2dip"
        android:paddingLeft="15dip"
        android:paddingRight="5dp"
        android:text="離開"
        style="@style/action_button2"

        />
</RelativeLayout>