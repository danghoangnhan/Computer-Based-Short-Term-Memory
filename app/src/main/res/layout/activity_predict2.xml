<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PredictActivity2"
    android:background="@color/royal_blue"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/cornflower_blue"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/recyCard"
            android:layout_height="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="720dp"
            android:background="@color/white"
            android:backgroundTint="@color/ghost_white"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:backgroundTint="@color/ghost_white"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:scrollbars="horizontal"
                app:layout_constraintHorizontal_bias="0.037"
                android:layout_marginLeft="50dp"
                />
        </androidx.cardview.widget.CardView>
        <include
            layout="@layout/board_button"
            android:id="@+id/imageCard"
            android:layout_marginLeft="50dp"
            android:layout_width="720dp"
            android:layout_height="410dp"
            android:layout_marginTop="210dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/userGuildeTab"
            android:layout_toRightOf="@+id/button_recycleTab"
            android:backgroundTint="@color/ghost_white"
            android:layout_width="269dp"
            android:layout_height="208dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="800dp"
            >
            <TextView
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:text="請把物件放到對應的位置"
                android:textSize="25dp"
                />
        </androidx.cardview.widget.CardView>

        <include
            layout="@layout/action_button_group"
            android:layout_marginLeft="800dp"
            android:layout_marginTop="450dp"
            android:layout_width="269dp"
            android:layout_height="208dp"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>